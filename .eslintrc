{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "mocha": true,
    "node": true,
    "browser": true,
    "es6": true
  },
  "globals": {
    "chai": true,
    "sinon": true,
    "expect": true
  },
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module"
  },
  "rules": {
    "no-debugger": "warn",
    "no-console": "warn",
    "semi": "warn",
    "no-multiple-empty-lines": ["error", {
      "max": 1,
      "maxBOF": 1,
      "maxEOF": 1
    }]
  }
}
